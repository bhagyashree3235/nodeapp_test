pipeline {
    agent {
        label 'Docker-Worker' 
    }

    stages {
        stage('Pull Docker Image') {
            steps {
                script {
                    docker.image('bhagyashreep/nodeapp_test:latest').pull()
                }
            }
        }
        stage('Deploy to Kubernetes') {
            steps {
                sh 'mkctl apply -f deployment.yml'
            }
        }
    }
}
